@model BeestjeOpJeFeestje.Models.Auth.LoginViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Login</div>
                <div class="card-body">
                    <form method="POST" asp-controller="Account" asp-action="LoginCheck" asp-antiforgery="true" class="d-flex flex-column border-2">
                        <label class="mt-3" for="loginInput">Email</label>
                        <input class="form-control px-3 py-2 mx-auto rounded-pill" type="email" name="loginInput" id="loginInput" required autofocus/>
                        <label class="mt-3" for="password">Password</label>
                        <input class="form-control px-3 py-2 mx-auto rounded-pill" type="password" name="password" id="password" required/>
                        <input type="submit" class="btn btn-primary mt-4 py-2 rounded-pill" value="Login">
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>