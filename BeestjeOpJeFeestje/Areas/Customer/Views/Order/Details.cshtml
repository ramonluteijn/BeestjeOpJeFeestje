@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BeestjeOpJeFeestje.Areas.Customer.Models.OrderViewModel
@{
    ViewData["Title"] = "Create customer";
}

<div class="page-header">
    <div class="container h-100 d-flex align-items-center justify-content-between">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item mb-0">
                    <a asp-action="Index">Home</a>
                </li>
                <li class="breadcrumb-item mb-0">
                    <a asp-action="Index">Orders</a>
                </li>
                <li class="breadcrumb-item mb-0 active" aria-current="page">Details</li>
            </ol>
        </nav>
    </div>
</div>

<div class="border-top"></div>

<div class="container bg-light rounded-3 p-3">
    <div class="bg-white border rounded-3 p-4 pt-5">

        <h1 class="fs-3 fw-bold text-center">Order details</h1>

        <div class="mx-auto" style="max-width: 30rem">
            <div class="mb-3">
                <div class="my-2">
                    <p>Name: @Model.Name</p>
                </div>
                <div class="my-2">
                    <p>Email: @Model.Email</p>
                </div>
                <div class="my-2">
                    <p>Order for: @Model.OrderFor</p>
                </div>
                <div class="my-2">
                    <p>House number: @Model.HouseNumber</p>
                </div>
                <div class="my-2">
                    <p>Zip code: @Model.ZipCode</p>
                </div>
                <div class="my-2">
                    <ul>
                        @foreach (var product in Model.ProductsOverViewModel.Products)
                        {
                            <li>
                                <p>Product: @product.Name</p>
                                <p>Price: @product.Price</p>
                            </li>
                        }
                    </ul>
                    <p>Total: @Model.TotalPrice</p>
                </div>
            </div>

            <div class="d-flex justify-content-between pt-2">
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-secondary">Delete</a>
                <a asp-action="Edit" class="btn btn-secondary">Edit</a>
            </div>
        </div>
    </div>
</div>